<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Player 1: 0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_p1"
        android:layout_centerHorizontal="true"
        android:text="Player 2: 0"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button_00"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text_view_p2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text_view_p2"
        android:layout_toRightOf="@+id/button_00"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text_view_p2"
        android:layout_toRightOf="@+id/button_01"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button_00"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button_01"
        android:layout_toRightOf="@+id/button_10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_12"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button_02"
        android:layout_toRightOf="@+id/button_11"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textSize="60sp" />
    <Button
        android:id="@+id/button_20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button_10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_21"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button_11"
        android:layout_toRightOf="@+id/button_20"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button_12"
        android:layout_toRightOf="@+id/button_21"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:textSize="60sp" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Reset"
        android:textSize="30sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>